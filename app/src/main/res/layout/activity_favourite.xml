<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FavouriteActivity">

    <TextView
        android:id="@+id/favouritesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="120dp"
        android:text="Favourites"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/favouritesListView"
        android:layout_width="404dp"
        android:layout_height="366dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/favouritesTextView" />

    <TableLayout
        android:id="@+id/tableLayout4"
        android:layout_width="399dp"
        android:layout_height="126dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/favouritesListView">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/labelTeamNameTextView"
                android:layout_width="145dp"
                android:layout_height="match_parent"
                android:text="Team Name:"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/teamNameTextView"
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/labelLeagueTextView"
                android:layout_width="136dp"
                android:layout_height="match_parent"
                android:text="League:"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/leagueTextView"
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/labelWinsTextView"
                android:layout_width="136dp"
                android:layout_height="match_parent"
                android:text="Wins:"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/winsTextView"
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/labelDrawsTextView"
                android:layout_width="136dp"
                android:layout_height="match_parent"
                android:text="Draws:"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/drawsTextView"
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/labelLossesTextView"
                android:layout_width="136dp"
                android:layout_height="match_parent"
                android:text="Losses:"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/lossesTextView"
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:textSize="18sp" />
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/homeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="165dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="156dp"
        android:layout_marginBottom="13dp"
        android:text="Home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout4"
        android:onClick="goHome"/>
</androidx.constraintlayout.widget.ConstraintLayout>